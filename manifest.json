{
  "manifest_version": 3,
  "name": "PDF to Claude AI",
  "version": "1.0.0",
  "description": "下載 PDF 檔案並傳送到 Claude AI 進行分析",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://wwwq.moex.gov.tw/*",
    "https://claude.ai/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
